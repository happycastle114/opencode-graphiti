{
  "name": "@happycastle/opencode-graphiti",
  "version": "0.1.0",
  "description": "OpenCode plugin that gives coding agents persistent memory using Graphiti temporal knowledge graph",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "opencode-graphiti": "./dist/cli.js"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun build ./src/cli.ts --outfile ./dist/cli.js --target node && tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "plugin",
    "graphiti",
    "knowledge-graph",
    "memory",
    "ai",
    "coding-agent",
    "temporal-graph",
    "mcp"
  ],
  "author": "OpenCode Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/happycastle114/opencode-graphiti"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.162"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  },
  "opencode": {
    "type": "plugin",
    "hooks": [
      "chat.message",
      "event"
    ]
  },
  "files": [
    "dist"
  ]
}
